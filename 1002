#include<iostream>
#include<cmath>

using namespace std;
void print(int n, char c)
{
	for (int i = 0; i<n-1; i += 2)
	{
		for (int j = 0; j<i; j += 2)
			cout<<' ';
		for (int j = i; j<n; j ++)
			cout<<c;
		cout<<"\n";
	}
	for (int i = 0; i<n; i += 2)
	{
		for (int j = i; j<n-1; j += 2)
			cout<<' ';
		for (int j = 0; j<=i; j++)
			cout<<c;
		cout<<"\n";
	}
	
}
int main()
{
	int N, n;
	char c;
	cin>>N>>c;
  	if (N>1000 || N<=0)
          ;
  	else
    {  
		n = sqrt(2*(N+1))-1;
		if (n%2 == 1){
			print(n, c);
	    }
	    else 
	    {
	    	n = n - 1;
	    	print(n, c);
		}
		cout<<N-(1+n)*(1+n)/2+1;
  	}
	return 0;
}
